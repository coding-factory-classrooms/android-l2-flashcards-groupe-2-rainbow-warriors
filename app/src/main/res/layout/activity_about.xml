<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <TextView
        android:id="@+id/appTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/groupNameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="DEFAULT" />

    <TextView
        android:id="@+id/groupNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/versionNameTextView"
        app:layout_constraintEnd_toEndOf="@+id/appTitleTextView"
        app:layout_constraintStart_toStartOf="@+id/appTitleTextView"
        app:layout_constraintTop_toBottomOf="@+id/appTitleTextView"
        tools:text="DEFAULT" />

    <TextView
        android:id="@+id/versionNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/groupNameTextView"
        app:layout_constraintStart_toStartOf="@+id/groupNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/groupNameTextView"
        tools:text="DEFAULT" />
</androidx.constraintlayout.widget.ConstraintLayout>